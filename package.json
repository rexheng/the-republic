{
  "name": "decentralized-research-graph",
  "version": "1.0.0",
  "description": "Blockchain-based knowledge graph for academic research with token incentives",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:flare": "hardhat run scripts/deploy.js --network flare",
    "deploy:plasma": "hardhat run scripts/deployPlasma.js --network plasma",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm start",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\""
  },
  "keywords": [
    "blockchain",
    "research",
    "defi",
    "flare",
    "plasma",
    "peer-review"
  ],
  "author": "ETH Oxford 2026",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "concurrently": "^8.2.2",
    "hardhat": "^2.28.4"
  },
  "dependencies": {
    "@upstash/ratelimit": "^2.0.8",
    "@vercel/kv": "^3.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.10.0"
  }
}
